<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/launcher_background"
    tools:context="org.activity.SetupActivity">

    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentTop="true">

        <ImageButton
            android:id="@+id/back"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginTop="11dp"
            android:layout_marginLeft="16sp"
            android:background="@drawable/ic_back"/>

        <TextView
            android:layout_width="36sp"
            android:layout_height="25dp"
            android:layout_marginTop="9dp"
            android:layout_marginLeft="193dp"
            android:text="设置"
            android:textSize="18sp"
            android:textColor="#FFFFFF"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FFFFFF"
        android:layout_below="@+id/top_bar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rectangle"
        android:layout_below="@+id/line">

        <ImageView
            android:layout_width="19dp"
            android:layout_height="16sp"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="31dp"
            android:background="@drawable/ic_resolv"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_marginTop="28dp"
            android:layout_marginLeft="55dp"
            android:text="分辨率"
            android:textSize="16sp"
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/resolv_one"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginTop="55dp"
            android:layout_marginLeft="46dp"
            android:background="@drawable/button_off"
            android:text="1080x1920"
            android:textSize="16sp"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/resolv_two"
            android:layout_width="95dp"
            android:layout_height="35dp"
            android:layout_marginTop="55dp"
            android:layout_marginLeft="165dp"
            android:background="@drawable/button_off"
            android:text="1080x680"
            android:textSize="16sp"
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/resolv_thr"
            android:layout_width="95dp"
            android:layout_height="35dp"
            android:layout_marginTop="55dp"
            android:layout_marginLeft="280dp"
            android:background="@drawable/button_off"
            android:text="1920x680"
            android:textSize="16sp"
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/resolv_fou"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginTop="105dp"
            android:layout_marginLeft="46dp"
            android:background="@drawable/button_off"
            android:text="480x640"
            android:textSize="16sp"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/resolv_fiv"
            android:layout_width="95dp"
            android:layout_height="35dp"
            android:layout_marginTop="105dp"
            android:layout_marginLeft="165dp"
            android:background="@drawable/button_off"
            android:text="600x800"
            android:textSize="16sp"
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/resolv_six"
            android:layout_width="95dp"
            android:layout_height="35dp"
            android:layout_marginTop="105dp"
            android:layout_marginLeft="280dp"
            android:background="@drawable/button_off"
            android:text="960x1280"
            android:textSize="16sp"
            android:textColor="#FFFFFF"/>

        <ImageView
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="178dp"
            android:background="@drawable/ic_url"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_marginTop="176dp"
            android:layout_marginLeft="55dp"
            android:text="服务器地址"
            android:textSize="16sp"
            android:textColor="#FFFFFF"/>

        <EditText
            android:id="@+id/url"
            android:textColor="#FFFFFF"
            android:textSize="13sp"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="212dp"
            android:layout_marginLeft="55dp"
            android:theme="@style/MyEditText"
            android:hint="请输入服务器地址"
            android:textColorHint="#FFFFFF"/>


        <ImageView
            android:layout_width="19dp"
            android:layout_height="16sp"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="286dp"
            android:background="@drawable/ic_key"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_marginTop="283dp"
            android:layout_marginLeft="55dp"
            android:text="键盘方案"
            android:textSize="16sp"
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/program_one"
            android:layout_width="95dp"
            android:layout_height="35dp"
            android:layout_marginTop="313dp"
            android:layout_marginLeft="42dp"
            android:background="@drawable/button_off"
            android:text="方案1"
            android:textSize="16sp"
            android:textColor="#FFFFFF" />
        <Button
            android:id="@+id/program_two"
            android:layout_width="95dp"
            android:layout_height="35dp"
            android:layout_marginTop="313dp"
            android:layout_marginLeft="165dp"
            android:background="@drawable/button_off"
            android:text="方案2"
            android:textSize="16sp"
            android:textColor="#FFFFFF"/>
        <Button
            android:id="@+id/program_thr"
            android:layout_width="95dp"
            android:layout_height="35dp"
            android:layout_marginTop="313dp"
            android:layout_marginLeft="280dp"
            android:background="@drawable/button_off"
            android:text="方案3"
            android:textSize="16sp"
            android:textColor="#FFFFFF"/>
        <Button
            android:id="@+id/program_fou"
            android:layout_width="95dp"
            android:layout_height="35dp"
            android:layout_marginTop="370dp"
            android:layout_marginLeft="42dp"
            android:background="@drawable/button_off"
            android:text="方案4"
            android:textSize="16sp"
            android:textColor="#FFFFFF" />
        <Button
            android:id="@+id/program_fiv"
            android:layout_width="95dp"
            android:layout_height="35dp"
            android:layout_marginTop="370dp"
            android:layout_marginLeft="165dp"
            android:background="@drawable/button_off"
            android:text="方案5"
            android:textSize="16sp"
            android:textColor="#FFFFFF"/>
        <Button
            android:id="@+id/program_six"
            android:layout_width="95dp"
            android:layout_height="35dp"
            android:layout_marginTop="370dp"
            android:layout_marginLeft="280dp"
            android:background="@drawable/button_off"
            android:text="方案6"
            android:textSize="16sp"
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/enter"
            android:layout_width="267dp"
            android:layout_height="40dp"
            android:layout_marginTop="442dp"
            android:layout_marginLeft="77dp"
            android:background="@drawable/button_on"
            android:text="确定"
            android:textSize="16sp"
            android:textColor="#FFFFFF"/>

    </RelativeLayout>


</RelativeLayout>